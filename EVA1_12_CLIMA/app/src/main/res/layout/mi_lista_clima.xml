<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgvwtormentaelectrica"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/thunderstorm" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtvwchihuahua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chihuahua"
            android:textColor="#F0000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvwgrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="TextView"
            android:textColor="#F0000000"
            tools:text="28Â°C" />

        <TextView
            android:id="@+id/txtvwcontormentaselectricas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Con tormentas electricas"
            android:textColor="#F0000000"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>
